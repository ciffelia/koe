{
  "name": "koe",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspaces/koe",
  "containerEnv": {
    // Persist bash history
    "PROMPT_COMMAND": "history -a",
    "HISTFILE": "${containerWorkspaceFolder}/.devcontainer/persist/.bash_history",
		// Persist mise data
		"MISE_DATA_DIR": "${containerWorkspaceFolder}/.devcontainer/persist/mise/data",
		"MISE_CACHE_DIR": "${containerWorkspaceFolder}/.devcontainer/persist/mise/cache",
    // Persist Claude Code config
    "CLAUDE_CONFIG_DIR": "${containerWorkspaceFolder}/.devcontainer/persist/.claude"
  },
	"onCreateCommand": "CONTAINER_WORKSPACE_FOLDER='${containerWorkspaceFolder}' .devcontainer/scripts/on-create.sh",
  "forwardPorts": [
    "redis:6379",
    "voicevox:50021"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-containers"
      ]
    }
  }
}
